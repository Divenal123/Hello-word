#! /bin/sh -e
source ~/.dotfiles/credentials.secret

echo "#### Backup ... ####"
duplicity --full-if-older-than 1M --encrypt-sign-key $bb_crypt_key \
          $Backup \
          b2://$bb_acount_id:$bb_app_key@$bb_bucket_name

duplicity remove-older-than 3M --encrypt-sign-key $bb_crypt_key \
          $Backup \
          b2://$bb_acount_id:$bb_app_key@$bb_bucket_name
